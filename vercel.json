{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json" },
    { "src": "backend/src/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/src/index.js" },
    { "src": "/static/(.*)", "dest": "/frontend/dist/static/$1" },
    { "src": "/assets/(.*)", "dest": "/frontend/dist/assets/$1" },
    { "src": "/vite.svg", "dest": "/frontend/dist/vite.svg" },
    { "src": "/favicon.ico", "dest": "/frontend/dist/favicon.ico" },
    { "src": "/", "dest": "/frontend/dist/index.html" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
